<?xml version="1.0" encoding="UTF-8"?>
<form>
	<attributes>
		<attribute name="action">?ext=loginpage&amp;controller=ext&amp;action=login</attribute>
		<attribute name="name">login</attribute>
	</attributes>
	<hiddenFields>
		<field name="passhash" />
	</hiddenFields>
	<fieldsets>

		<fieldset name="message">
			<legend>Info messages</legend>
			<class>message</class>
			<elements>

			</elements>
		</fieldset>

		<fieldset name="inputs">
			<legend>Login dialog</legend>
			<class>loginForm</class>
			<elements>

				<field type="comment" name="status">
					<comment>LLL:loginpage.form.status.enterLoginData</comment>
				</field>

				<field type="textinput" name="username">
					<label>loginpage.form.field.username</label>
					<validate>
						<isNotEmpty msg="Tell me your name!" />
					</validate>
					<required />
				</field>

				<field type="textinput" name="password">
					<label>loginpage.form.field.password</label>
					<type>password</type>
					<required />
				</field>

				<field type="checkbox" name="loginremain">
					<label>loginpage.form.remainLogin</label>
				</field>

			</elements>
		</fieldset>

		<fieldset name="buttons">
			<legend>Actions</legend>
			<class>buttons</class>
			<elements>
				<field type="button" name="submit">
					<text>LLL:loginpage.form.field.submit</text>
					<type>submit</type>
					<class>buttonLogin</class>
					<hasIcon />
				</field>
			</elements>
		</fieldset>

	</fieldsets>
</form>